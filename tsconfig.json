{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "target": "es6",
    "outDir": "./lib",
    "declaration": true,
    "lib": [ "es2015", "dom" ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
